# Author: Hunter Wittenborn <git@hunterwittenborn.me>
# Maintainer: Hunter Wittenborn <git@hunterwittenborn.me>

pkgname="${pkgname}"
pkgver=2.0.6
pkgrel=2
pkgdesc="Make PKGBUILDs work on Debian-based distros (${release_type} release)"
arch=('any')
depends=('makepkg' 'dpkg-dev' 'binutils' 'file')
conflicts=('makedeb-alpha')
license=('GPL3')
url="https://github.com/hwittenborn/makedeb"

source=("makedeb.sh"
        "packages.db")
sha256sums=('SKIP'
	          'SKIP')

prepare() {
  # Set variables in makedeb.sh
  sed "s|FUNCTIONS_DIR=.*|FUNCTIONS_DIR=/usr/lib/makedeb/|"
}

package() {
  mkdir -p "${pkgdir}/usr/bin/"
    cp "${srcdir}/makedeb.sh" "${pkgdir}/usr/bin/makedeb"
  mkdir -p "${pkgdir}/etc/makedeb"
    cp "${srcdir}/packages.db" "${pkgdir}/etc/makedeb/"
  mkdir -p "${pkgdir}/usr/lib/makedeb"
    cp -R "${srcdir}"/../functions/* "${pkgdir}"/usr/lib/makedeb/
}
